---
interface Props {
    title?: string | undefined,
    colors?: string[] | undefined
}

const DEFAULT_COLORS = [
    "#C751CA",
    "#EB6969",
    "#7BCD54"
];

const {
    title = "Section Header",
    colors = DEFAULT_COLORS
} = Astro.props;

---

<header>
    <span>
        {
            colors.map(x => (
                <span style={`background-color: ${x}`}/>
            ))
        }
    </span>
    <h3>
        { title }
    </h3>
    <p>
        <slot/>
    </p>
</header>

<style lang="scss">
    header {
        display: flex;
        align-items: stretch;
        justify-content: left;
        margin-bottom: 4rem;
        line-height: normal;

        > span {
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: space-around;
            margin: 0 2rem 0 3rem;

            > span {
                height: 0.75rem;
                width: 0.75rem;
                background-color: #bbb;
                border-radius: 50%;
                display: inline-block;
            }
        }

        > h3 {
            text-align: left;
            font-size: 6rem;
            flex: 1;            
            margin: 0;
        }

        > p {
            font-size: 1.8rem;
            text-align: left;
            margin: auto;
            margin-left: 4rem;
            width: 35rem;
            color: #97a2bb; // #717171;
            line-height: 2rem;
        }
    }
</style>
