---
    import { Icon } from "astro-icon";
    import ExternalLink from "./ExternalLink";
---

<footer>
    <div class="social-links">
        <ExternalLink href="https://github.com/JackSkylark">
            <div class="social-link-icon">
                <Icon pack="mdi" name="github" />
            </div>            
        </ExternalLink>
        <ExternalLink href="https://gitlab.com/JackSkylark">
            <div class="social-link-icon">
                <Icon pack="mdi" name="gitlab" />
            </div>            
        </ExternalLink>
        <ExternalLink href="https://www.moonlark.studios">
            <div class="social-link-icon">
                <Icon pack="ion" name="game-controller" />
            </div>
        </ExternalLink>
    </div>
</footer>

<style lang="scss">
    footer {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        margin: 1rem;
    }

    .social-links {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        gap: 1.5rem;
    }

    .social-link-icon {
        color: white;

        width: 3rem;
        height: 3rem;
    }
</style>